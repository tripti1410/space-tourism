---
const path = Astro.request.url.pathname;

function pageState(href) {
    return href === path ? "active" : "";
}

---

<header class="primary-header flex">
    <a class="logo-link" href="/"><img class="logo" width="48" height="48" src="/assets/shared/logo.svg" alt="space tourism logo"/></a>
    <button class="mobile-nav-toggle" aria-controls="primary-navigation" aria-expanded="false"><span class="sr-only" >Menu</span></button>

    <nav>
        <ul id="primary-navigation" class="primary-navigation flex underline-indicators ff-sans-cond uppercase letter-spacing-2">
            <li data-state={pageState("/")}>
                <a href="/">
                    <span aria-hidden="true">00</span> Home
                </a>
            </li>
            <li data-state={pageState("/destination")}>
                <a href="/destination">
                    <span aria-hidden="true">01</span> Destination
                </a>
            </li>
            <li data-state={pageState("/crew")}>
                <a href="/crew"><span aria-hidden="true">02</span> Crew
                </a>
            </li>
            <li data-state={pageState("/technology")}>
                <a href="/technology">
                    <span aria-hidden="true">03</span> Technology
                </a>
            </li>
        </ul>
    </nav>
</header>