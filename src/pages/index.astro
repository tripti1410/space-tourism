import BaseLayout from '$/layouts/BaseLayout.astro';
---

<BaseLayout title="Space Tourism | Home">

<header class="primary-header flex">
    <a class="logo" href="/"><img src="/assets/shared/logo.svg" alt="space tourism logo"/></a>
    <nav>
        <ol class="primary-navigation underline-indicators ff-sans-cond uppercase letter-spacing-2 fs-300 flex">
            <li data-state="active"><a href="/"><span>00</span> Home</a></li>
            <li><a href="/destination"><span>01</span> Destination</a></li>
            <li><a href="/crew"><span>02</span> Crew</a></li>
            <li><a href="/technology"><span>03</span> Technology</a></li>
        </ol>
    </nav>
</header>
<main class="grid-container">
<div>
    <h1 class="fs-500 ff-sans-cond uppercase letter-spacing-1 text-light">So, you want to travel to
    <span class="d-block fs-900 ff-serif uppercase text-white">Space</span>
    </h1> 
    <p class="text-light">
    Let’s face it; if you want to go to space, you might as well genuinely go to 
    outer space and not hover kind of on the edge of it. Well sit back, and relax 
    because we’ll give you a truly out of this world experience!
    </p></div>
    <div>
    <a href="/destination" class="large-button ff-serif fs-600 uppercase text-dark bg-white letter-spacing-3">Explore</a></div>
</main>

 

  
</BaseLayout>